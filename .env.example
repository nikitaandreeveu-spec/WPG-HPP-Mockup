# Get these values from your Worldpay merchant account
# Sign up at: https://developer.worldpay.com

# API Endpoint (use try.access.worldpay.com for testing, access.worldpay.com for production)
WORLDPAY_API_URL=https://try.access.worldpay.com/payment_pages

# Your Worldpay merchant entity (e.g., POxxxxxxxxx)
WORLDPAY_MERCHANT_ENTITY=YOUR_MERCHANT_ENTITY

# Basic Auth credentials provided by your Implementation Manager
WORLDPAY_USERNAME=YOUR_USERNAME
WORLDPAY_PASSWORD=YOUR_PASSWORD

# Server Configuration
PORT=3000
SESSION_SECRET=your_session_secret_here

# Application URLs
BASE_URL=http://localhost:3000
SUCCESS_URL=http://localhost:3000/order-confirmation
CANCEL_URL=http://localhost:3000/checkout
ERROR_URL=http://localhost:3000/checkout?error=payment
FAILURE_URL=http://localhost:3000/checkout?error=payment

# Demo Mode (set to true to simulate payment without Worldpay)
# When true, no actual API calls are made to Worldpay
DEMO_MODE=false
